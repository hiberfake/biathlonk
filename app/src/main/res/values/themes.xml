<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Biathlon" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:forceDarkAllowed">false</item>
    </style>

    <style name="Theme.Biathlon.Starting" parent="Theme.SplashScreen.IconBackground">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/white</item>

        <item name="postSplashScreenTheme">@style/Theme.Biathlon</item>
    </style>
</resources>
